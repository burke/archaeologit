%html
  %head
    %title Git History Viewer
    %link{:rel => "Stylesheet", :href => "/css/style.css"}
    %link{:rel => "Stylesheet", :href => "/css/ui-lightness/jquery-ui-1.8rc3.custom.css"}
    %script{:src => "/js/jquery-1.4.2.min.js"}
    %script{:src => "/js/jquery.ui.core.js"}
    %script{:src => "/js/jquery.ui.widget.js"}
    %script{:src => "/js/jquery.ui.mouse.js"}
    %script{:src => "/js/jquery.ui.slider.js"}
    %script{:src => "/js/application.js"}
  %body
    #container
      #header
        #nav
      #content 
        %ul#sidebar
        #screen{:style => "font-family: monospace"}
      %pre#history{:style=>"display:none;height:0"}= log
      #footer
        %dl
          %dt Commit: 
          %dd#commithash
          %dt Author:
          %dd#author 
          %dt Date:
          %dd#date 
        #commitmsg
        
